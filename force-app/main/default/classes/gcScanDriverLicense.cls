@RestResource(UrlMapping='/gcScanDriverLicense')
global without sharing class gcScanDriverLicense {

    global class gcException extends Exception{}

    @HttpPost
    global static Map<String, String> postBarcode(String data, String redirectId) {
        Map<String, String> result = new Map<String, String>();        
        try {
            Contact account = processScan_local(parseBarcode(data));
            updateRedirectRecord(account, redirectId);

            result.put('status', '200');
            result.put('message', 'success');
            result.put('location', getCommunityURL()+'deal-entry-page#redirectId='+redirectId);

            return result;

        } catch (gcException e) {

            result.put('status', '406');
            result.put('message', e.getMessage());

            return result;
        }
    }

    private static String parseBarcode(String data) {
        List<Object> codes = (List<Object>) JSON.deserializeUntyped(data);
        List<String> barcodes = new List<String>();

        for (Object fld : codes) {
            Map<String, Object> codeData = (Map<String, Object>) fld;
            barcodes.add((String) codeData.get('text'));
        }

        if(!barcodes.isEmpty())
            return barcodes[0];
        else
                return null;
    }

    public static String updateRedirectRecord(Contact account, Id redirectId)
    {
        GMBLBC__Redirect__c redirect;
        for(GMBLBC__Redirect__c r : [
            SELECT Id,
                    GMBLBC__Component_Attributes__c 
            FROM GMBLBC__Redirect__c 
            WHERE Id =: redirectId
            LIMIT 1
        ])
        {
            redirect = r;
        }
        if(redirect == null)
        {
            throw new gcException('Process Error: invalid redirect ID');
        }

        map<String,Object> mapAttributes = new map<String,Object>();

        if(redirect.GMBLBC__Component_Attributes__c != null)
            mapAttributes = (map<String,Object>)JSON.deserializeUntyped(redirect.GMBLBC__Component_Attributes__c);
        
        mapAttributes.put('contact',account);
        mapAttributes.put('step',(String)'editScannedAccount');

        String json = JSON.serializePretty(mapAttributes);

        redirect.GMBLBC__Component_Attributes__c = json;
        update redirect;
        return json;
    }

    @AuraEnabled
    public static String getCommunityURL(){
        Id networkId = Network.getNetworkId();
        ConnectApi.Community myCommunity = ConnectApi.Communities.getCommunity(networkId);
        return myCommunity.siteUrl + '/s/';
    }

    @AuraEnabled
    public static Contact processScan(String barcode)
    {
        try{
            Contact account = processScan_local(barcode);
            return account;
        }
        catch(Exception e)
        {
            throw new AuraHandledException(e.getMessage());
        }
    }

    private static Contact processScan_local(String barcode)
    {
        return gcDriverLicensePDF417.createAccount(barcode);
    }

    @AuraEnabled
    global static List<Account> checkIfAccountExists(String driversLicenseNumber, String accName, String billingStreet){
        if (String.isBlank(accName)) {
            throw new AuraHandledException('Name can not be blank');
        }

        String query = 'SELECT Id, Name, BillingAddress, BillingCity, BillingCountry, BillingPostalCode, ' +
                'Drivers_License_Number__c, Description, Date_of_Birth__c, Driver_s_License_Expiration_Date__c ' +
                'FROM Account WHERE ';

        if(!String.isBlank(driversLicenseNumber)){
            query += 'Drivers_License_Number__c = :driversLicenseNumber OR ';
        }
        if (!String.isBlank(billingStreet)) {
            query += '(Name = :accName AND BillingStreet = :billingStreet) ';
        }else{
            query += 'Name = :accName ';
        }
        query += ' LIMIT 100';

        return Database.query(query);
    }

    @AuraEnabled
    global static Id createAccount(Account account) {
        try {
            List<RecordType> borrowerRecTypes = [
                    SELECT Id, DeveloperName
                    FROM RecordType
                    WHERE SobjectType = 'Account'
                    AND DeveloperName = 'Borrower'
            ];
            account.RecordTypeId = borrowerRecTypes[0].Id;
            insert account;
            return account.Id;
        }
        catch(Exception e) {
            throw new AuraHandledException(e.getMessage());
        }
    }

