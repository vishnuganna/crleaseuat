    private HttpRequest addBodyParam(HttpRequest request, String key, String value) {
        request.setBody(request.getBody() + '&' + key + '=' + EncodingUtil.urlEncode(value, 'utf-8'));
        return request;
    }

    private HttpRequest buildBasicRequest(String methodEndpoint) {
        HttpRequest request = new HttpRequest();

        request.setMethod('GET');
        request.setEndpoint(this.defaultEndpoint + methodEndpoint);
//        request.setHeader('Authorization', 'Basic ' + EncodingUtil.base64Encode(Blob.valueOf(ACCOUNT_ID + ':' + AUTH_TOKEN)));
        request.setHeader('Ocp-Apim-Subscription-Key', API_KEY);


        request.setTimeout(120000);
        request.setHeader('Content-Type', 'application/json');

        return request;
    }

